---
import { icon } from '@/lib/Icons/getIcon'

const { title, href } = Astro.props

let url,
  iconLink,
  iconWidth = 24

try {
  url = new URL(href)
  url.searchParams.append('ref', 'linktree-storyblok-astro-edgio-starter')
  url = url.toString()
} catch (e) {
  console.log(e.message || e.toString())
}

try {
  iconLink = icon(title.toLowerCase().replace(/-/g, '').replace(/ /g, ''))
} catch (e) {
  console.log(e.message || e.toString())
}
---

